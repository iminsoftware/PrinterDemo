<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    android:orientation="vertical"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/dra_corner_white_5"
        android:layout_marginHorizontal="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:text="@string/aging_test"
            android:textSize="15dp"
            android:layout_marginTop="18dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_3333333"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/tv_title"
            android:layout_alignTop="@+id/tv_title"
            android:layout_width="24dp"
            android:src="@mipmap/ic_close"/>

        <TextView
            android:id="@+id/tv_print_num"
            android:layout_width="wrap_content"
            android:text="@string/prints_number"
            android:layout_marginTop="42dp"
            android:textColor="@color/color_999999"
            android:textSize="14dp"
            android:layout_below="@+id/tv_title"
            android:gravity="center"
            android:layout_marginStart="55dp"
            android:layout_height="wrap_content"/>

        <com.imin.newprinterdemo.view.PrinterMarginLayout
            android:id="@+id/print_num_layout"
            android:layout_width="wrap_content"
            android:layout_marginStart="165dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="54dp"
            android:layout_below="@+id/tv_title"
            android:layout_height="50dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="0"
            android:layout_marginStart="180dp"
            android:textSize="18dp"
            android:layout_marginTop="-20dp"
            android:layout_below="@+id/print_num_layout"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_max_print_num"
            android:layout_width="wrap_content"
            android:layout_marginTop="-20dp"
            android:layout_marginStart="470dp"
            android:textSize="18dp"
            android:layout_marginEnd="4dp"
            android:layout_below="@+id/print_num_layout"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_interval"
            android:layout_below="@id/tv_print_num"
            android:text="@string/intervals"
            android:layout_width="wrap_content"
            android:layout_marginTop="62dp"
            android:layout_marginStart="55dp"
            android:textColor="@color/color_999999"
            android:textSize="14dp"
            android:layout_height="wrap_content"/>

        <com.imin.newprinterdemo.view.PrinterMarginLayout
            android:id="@+id/interval_layout"
            android:layout_width="wrap_content"
            android:layout_marginStart="165dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="54dp"
            android:layout_below="@+id/print_num_layout"
            android:layout_height="50dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="0"
            android:layout_marginTop="-20dp"
            android:layout_marginStart="180dp"
            android:textSize="18dp"
            android:layout_below="@+id/interval_layout"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_max_interval_time"
            android:layout_width="wrap_content"
            android:layout_marginTop="-20dp"
            android:layout_marginStart="470dp"
            android:textSize="18dp"
            android:layout_marginEnd="-7dp"
            android:layout_below="@+id/interval_layout"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp"
            android:layout_below="@+id/tv_max_interval_time">
            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/cancel"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/dra_gray_corner_5"/>
            <TextView
                android:id="@+id/tvSure"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="@string/sure"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/dra_corner_5"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>
</RelativeLayout>