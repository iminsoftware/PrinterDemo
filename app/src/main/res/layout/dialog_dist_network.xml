<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyEditNetWork"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dra_eff1f7_corner_5"
    android:visibility="visible">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:textSize="14sp"
            android:text="@string/distribution_network"
            android:background="@drawable/dra_title_bg_corner_5"
            android:textColor="@color/color_1D1D1F" />
        <FrameLayout
            android:id="@+id/flCloseDialog"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="end">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_close"/>
        </FrameLayout>
    </FrameLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_point_bg1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/connectNetworkTv"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/dra_green60_corner_5"
                android:gravity="center"
                android:text="@string/distribution_network"
                android:textColor="@color/white"
                android:textSize="12sp"/>

        </LinearLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_point_bg1"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/connectTv"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:background="@drawable/dra_gray_corner_5"
                android:gravity="center"
                android:text="@string/connect"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_item_normal">

        <LinearLayout
            android:id="@+id/clConnectNetwork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connect_wifi_tips"
                android:textColor="@color/text"
                android:textSize="12sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/wifi_ssid"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/ssidSpinnerEtDialog"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/stri_bg_gray_5dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/color_1D1D1F"
                    android:textSize="12sp" />

                <FrameLayout
                    android:id="@+id/flSsidDialog"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="17dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_inverted_triangle" />
                </FrameLayout>


            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/wifi_pwd"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/pwdEtDialog"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/stri_bg_gray_5dp"
                    android:hint="@string/edit_hit"
                    android:inputType="textPassword"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/color_1D1D1F"
                    android:textColorHint="@color/color_999999"
                    android:textSize="12sp" />

                <FrameLayout
                    android:id="@+id/flPwdDialog"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="17dp">

                    <ImageView
                        android:id="@+id/pwtOpenIv"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_pwd_close" />
                </FrameLayout>

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="DHCP"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchStaticDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="80dp"
                    android:checked="true"
                    android:enabled="true"
                    android:background="@null"
                    android:textColor="#437DFE"
                    android:thumb="@drawable/ic_radio"
                    app:switchMinWidth="36dp"
                    app:track="@drawable/ic_select_track"/>

            </FrameLayout>


            <LinearLayout
                android:id="@+id/lyStaticDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/staticTvDialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/static_ip"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/staticIpEtDialog"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="80dp"
                        android:background="@drawable/stri_bg_gray_5dp"
                        android:digits="0123456789."
                        android:hint="@string/edit_hit"
                        android:inputType="number|textNoSuggestions"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/color_1D1D1F"
                        android:textSize="12sp" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/static_gw"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/gwEtDialog"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="80dp"
                        android:background="@drawable/stri_bg_gray_5dp"
                        android:digits="0123456789."
                        android:hint="@string/edit_hit"
                        android:inputType="number|textNoSuggestions"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/color_1D1D1F"
                        android:textSize="12sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/static_mask"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/maskEtDialog"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="80dp"

                        android:background="@drawable/stri_bg_gray_5dp"
                        android:digits="0123456789."
                        android:hint="@string/edit_hit"
                        android:inputType="number|textNoSuggestions"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/color_1D1D1F"
                        android:textSize="12sp" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/static_dns"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/dnsEtDialog"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="80dp"
                        android:background="@drawable/stri_bg_gray_5dp"
                        android:digits="0123456789."
                        android:hint="@string/edit_hit"
                        android:inputType="number|textNoSuggestions"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/color_1D1D1F"
                        android:textSize="12sp"/>
                </FrameLayout>


            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lyIsPrintDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingTop="10dp"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/ivIsPrintDialog"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/ic_uncheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/connected_to_print"
                    android:textColor="@color/color_1D1D1F"
                    android:textSize="12sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/usbNetworkConfirmTvDialog"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/dra_green_corner_5"
                    android:enabled="true"
                    android:gravity="center"
                    android:text="@string/usb_connect_network"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/btNetworkConfirmTvDialog"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/dra_green_corner_5"
                    android:enabled="true"
                    android:gravity="center"
                    android:text="@string/bt_connect_network"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/clConnectIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/autoLy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/autoConnectIv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_uncheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/automatically_connect"
                        android:textColor="@color/color_1D1D1F"
                        android:textSize="12sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="130dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/autoTips"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="5dp"
                        android:text="@string/connect_wifi_tips1"
                        android:textColor="@color/text"
                        android:textSize="12sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/autoTips"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/getConnectIPTv"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/dra_blue_corner_5"
                            android:gravity="center"
                            android:text="@string/get_connect_ip"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/baseIPTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/getConnectIPTv"
                            android:text="@string/status_ip"
                            android:textColor="@color/color_1D1D1F"
                            android:textSize="12sp"
                            android:visibility="invisible" />
                    </LinearLayout>


                </RelativeLayout>
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ipLy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ipIv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_uncheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/active_connect"
                        android:textColor="@color/color_1D1D1F"
                        android:textSize="12sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <EditText
                    android:id="@+id/ipEt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="130dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/stri_bg_gray_5dp"
                    android:digits="0123456789."
                    android:hint="@string/edit_hit"
                    android:inputType="number|textNoSuggestions"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/color_1D1D1F"
                    android:textColorHint="@color/color_999999"
                    android:textSize="12sp" />
            </FrameLayout>


            <TextView
                android:id="@+id/ipConfirmTv"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:alpha="0.5"
                android:background="@drawable/dra_green_corner_5"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/start_connect"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>