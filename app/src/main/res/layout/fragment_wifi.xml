<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/bg_color_eff1f7"
    android:orientation="vertical">

    <com.imin.newprinter.demo.view.TitleLayout
        android:id="@+id/viewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        app:back="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftTitle="@string/print_test"
        app:leftTitleVisible="false"
        app:leftVisible="false"
        app:rightVisible="true" />

<!--    <androidx.core.widget.NestedScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:fillViewport="true">-->

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="vertical">-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/wifiStatusTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="@string/status_wifi"
                    android:textColor="@color/color_1D1D1F"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/wifiIPTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wifiStatusTv"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/status_ip"
                    android:textColor="@color/color_1D1D1F"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/wifiStatusTv" />


            </RelativeLayout>

            <com.scwang.smart.refresh.layout.SmartRefreshLayout
                android:id="@+id/srlBtRefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:visibility="visible"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/btn_white_shape">

                <com.scwang.smart.refresh.header.MaterialHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_white_shape"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="10dp"
                            android:textSize="14sp"
                            android:text="@string/wifi_connected"
                            android:background="@drawable/dra_title_bg_corner_5"
                            android:textColor="@color/color_1D1D1F" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvWifiConnected"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"
                            android:scrollbars="none"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:nestedScrollingEnabled="false"
                            android:listSelector="@drawable/btn_white_selector" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:paddingHorizontal="15dp"
                            android:background="@drawable/dra_title_bg_corner_5"
                            android:paddingVertical="10dp"
                            android:textSize="14sp"
                            android:text="@string/bt_connected"
                            android:textColor="@color/color_1D1D1F" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvBtConnected"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"
                            android:scrollbars="none"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:nestedScrollingEnabled="false"
                            android:listSelector="@drawable/btn_white_selector" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:paddingHorizontal="15dp"
                            android:background="@drawable/dra_title_bg_corner_5"
                            android:paddingVertical="10dp"
                            android:textSize="14sp"
                            android:text="@string/wait_connect"
                            android:textColor="@color/color_1D1D1F" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvNotConnect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:scrollbars="none"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:nestedScrollingEnabled="false"
                            android:listSelector="@drawable/btn_white_selector" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:paddingHorizontal="15dp"
                            android:background="@drawable/dra_title_bg_corner_5"
                            android:paddingVertical="10dp"
                            android:textSize="14sp"
                            android:text="@string/distributed_network"
                            android:textColor="@color/color_1D1D1F" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvWaitConnect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:scrollbars="none"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:nestedScrollingEnabled="false"
                            android:listSelector="@drawable/btn_white_selector" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

            </com.scwang.smart.refresh.layout.SmartRefreshLayout>



</androidx.appcompat.widget.LinearLayoutCompat>