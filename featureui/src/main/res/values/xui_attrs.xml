<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 字母索引控件，包含RecyclerView和IndexBar -->
    <declare-styleable name="IndexAbleLayout">
        <attr name="indexBar_selectedTextColor" format="color" />
        <attr name="indexBar_selectedTextBackground" format="reference|color" />
        <attr name="indexBar_selectedTextBackgroundWidth" format="dimension" />
        <attr name="indexBar_selectedTextBackgroundHeight" format="dimension" />
        <attr name="indexBar_textColor" format="color" />
        <attr name="indexBar_textSize" format="dimension" />
        <attr name="indexBar_textSpace" format="dimension" />
        <attr name="indexBar_background" format="reference|color" />
        <attr name="indexBar_layout_width" format="dimension" />
    </declare-styleable>

    <!--搜索框属性-->
    <declare-styleable name="SearchLayout">
        <attr name="sv_show_left_icon" format="boolean" />
        <attr name="sv_left_icon" format="reference" />
        <attr name="sv_show_right_icon" format="boolean" />
        <attr name="sv_right_icon" format="reference" />
        <attr name="sv_show_back_icon" format="boolean" />
        <attr name="sv_show_search_button" format="boolean" />
        <attr name="sv_show_camera_icon" format="boolean" />
        <attr name="sv_show_mic_icon" format="boolean" />
        <attr name="sv_hint" format="string" />
    </declare-styleable>

    <!--验证码输入框属性-->
    <declare-styleable name="VerificationCodeEditText">
        <attr name="et_hint" format="string" />
        <attr name="et_length" format="integer" />
        <attr name="et_hint_color" format="color" />
        <attr name="et_text_size" format="dimension" />
        <attr name="et_text" format="string" />
        <attr name="et_text_color" format="color" />
        <attr name="et_background_color" format="color" />
        <attr name="et_background_drawable" format="reference" />
        <attr name="btn_text" format="string" />
        <attr name="btn_text_size" format="dimension" />
        <attr name="btn_text_color" format="color" />
        <attr name="btn_background_color" format="color" />
        <attr name="btn_background_drawable" format="reference" />
    </declare-styleable>

    <!-- 星星评级 -->
    <declare-styleable name="XUIRatingBar">
        <attr name="rb_borderColor" format="color" />
        <attr name="rb_fillColor" format="color" />
        <attr name="rb_backgroundColor" format="color" />
        <attr name="rb_starBackgroundColor" format="color" />
        <attr name="rb_pressedBorderColor" format="color" />
        <attr name="rb_pressedFillColor" format="color" />
        <attr name="rb_pressedBackgroundColor" format="color" />
        <attr name="rb_pressedStarBackgroundColor" format="color" />
        <attr name="rb_numberOfStars" format="integer" />
        <attr name="rb_starSize" format="dimension" />
        <attr name="rb_maxStarSize" format="dimension" />
        <attr name="rb_starsSeparation" format="dimension" />
        <attr name="rb_starBorderWidth" format="float" />
        <attr name="rb_starCornerRadius" format="float" />
        <attr name="rb_isIndicator" format="boolean" />
        <attr name="rb_rating" format="float" />
        <attr name="rb_stepSize" format="float" />
        <attr name="rb_drawBorderEnabled" format="boolean" />
        <attr name="rb_gravity" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="rb_continuous" format="boolean" />
    </declare-styleable>

    <!-- Banner -->
    <declare-styleable name="Banner">
        <attr name="banner_loop_time" format="integer" />
        <attr name="banner_auto_loop" format="boolean" />
        <attr name="banner_infinite_loop" format="boolean" />

        <!--RoundLinesIndicator、RectangleIndicator-->
        <attr name="banner_indicator_height" format="dimension" />
        <attr name="banner_indicator_radius" format="dimension" />

        <!-- 以下为公用属性 -->
        <attr name="banner_indicator_selected_width" format="dimension" />
        <!--CircleIndicator-->
        <attr name="banner_indicator_normal_width" format="dimension" />
        <attr name="banner_indicator_space" format="dimension" />

        <attr name="banner_indicator_normal_color" format="reference|color" />
        <attr name="banner_indicator_selected_color" format="reference|color" />
        <attr name="banner_indicator_margin" format="dimension" />
        <attr name="banner_indicator_marginLeft" format="dimension" />
        <attr name="banner_indicator_marginTop" format="dimension" />
        <attr name="banner_indicator_marginRight" format="dimension" />
        <attr name="banner_indicator_marginBottom" format="dimension" />

        <attr name="banner_indicator_gravity" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>

        <attr name="banner_orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="banner_radius" format="dimension" />

    </declare-styleable>

    <!--图标+文字的按钮-->
    <declare-styleable name="ButtonView">
        <attr name="bv_icon_resource" format="reference" />
        <attr name="bv_icon_width" format="dimension" />
        <attr name="bv_icon_height" format="dimension" />
        <attr name="bv_text_content" format="string|reference" />
        <attr name="bv_text_content_color" format="color|reference" />
        <attr name="bv_text_content_size" format="dimension|reference" />
        <attr name="bv_icon_text_margin" format="dimension|reference" />
        <attr name="bv_icon_visibility" format="boolean" />
    </declare-styleable>
    <attr name="QXUIPullLayoutStyle" format="reference" />

    <declare-styleable name="XUIPullLayout_Layout">
        <attr name="xui_is_target" format="boolean" />
        <attr name="xui_pull_edge" format="enum">
            <enum name="left" value="0x1" />
            <enum name="top" value="0x2" />
            <enum name="right" value="0x4" />
            <enum name="bottom" value="0x8" />
        </attr>
        <attr name="xui_action_view_init_offset" format="dimension" />
        <attr name="xui_target_view_trigger_offset" format="dimension|enum">
            <enum name="wrap" value="-2" />
        </attr>
        <attr name="xui_can_over_pull" format="boolean" />
        <attr name="xui_pull_rate" format="float" />
        <attr name="xui_received_fling_fraction" format="float" />
        <attr name="xui_need_receive_fling_from_target_view" format="boolean" />
        <attr name="xui_scroll_speed_per_pixel" format="integer" />
        <attr name="xui_trigger_until_scroll_to_trigger_offset" format="boolean" />
        <attr name="xui_scroll_to_trigger_offset_after_touch_up" format="boolean" />
    </declare-styleable>

    <!-- QXUIPullLayout start -->
    <declare-styleable name="QXUIPullLayout">
        <attr name="qxui_pull_enable_edge">
            <flag name="left" value="0x1" />
            <flag name="top" value="0x2" />
            <flag name="right" value="0x4" />
            <flag name="bottom" value="0x8" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="tb_title" format="string|reference" />
        <attr name="tb_right_str" format="string|reference" />
        <attr name="tb_center_title" format="boolean" />
        <attr name="tb_show_line" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MarkEditText">
        <attr name="isSingle" format="boolean" />
        <attr name="isShowDelete" format="boolean" />
        <attr name="isShowMark" format="boolean" />
        <attr name="isShowHidden" format="boolean" />
        <attr name="isShowLine" format="boolean" />
        <attr name="bottomLineColor" format="color|reference" />
        <attr name="bottomLineHeight" format="dimension" />
        <attr name="text" format="string|reference" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="hintText" format="string|reference" />
        <attr name="count" format="integer" />
        <attr name="showLengthOverTips" format="boolean" />
        <attr name="enable" format="boolean" />
        <attr name="icon" format="reference" />
        <attr name="select" format="string|reference" />
        <attr name="isSelectRight" format="boolean" />
    </declare-styleable>

    <attr name="progress_color" format="color" />
    <attr name="background_color" format="color" />
    <attr name="max_value" format="float" />
    <attr name="current_value" format="float" />

    <declare-styleable name="ProgressView">
        <attr name="view_type" format="enum">
            <enum name="type_rect" value="0" />
            <enum name="type_round_rect" value="1" />
            <enum name="type_circle" value="2" />
        </attr>
        <attr name="progress_height" format="dimension" />
        <attr name="progress_width" format="dimension" />
        <attr name="progress_color" />
        <attr name="background_color" />
        <attr name="max_value" />
        <attr name="current_value" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:text" />
        <attr name="text_Padding" format="dimension" />
        <attr name="text_direction" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="top" value="2" />
            <enum name="bottom" value="3" />

        </attr>
    </declare-styleable>
    <declare-styleable name="CircleProgressView">
        <attr name="stroke_width" format="dimension" />
        <attr name="stroke_round_cap" format="boolean" />
        <attr name="progress_color" />
        <attr name="background_color" />
        <attr name="max_value" />
        <attr name="current_value" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:text" />
    </declare-styleable>

    <attr name="qxui_general_shadow_elevation" format="dimension" />
    <attr name="qxui_general_shadow_alpha" format="float" />

    <!-- 同时指定四个方向的圆角大小 -->
    <attr name="qxui_radius" format="dimension" />
    <attr name="qxui_borderColor" format="color" />
    <attr name="qxui_borderWidth" format="dimension" />

    <declare-styleable name="QXUILayout">
        <attr name="android:maxWidth" />
        <attr name="android:maxHeight" />
        <attr name="android:minWidth" />
        <attr name="android:minHeight" />
        <attr name="qxui_bottomDividerHeight" format="dimension" />
        <attr name="qxui_bottomDividerColor" format="color|reference" />
        <attr name="qxui_bottomDividerInsetLeft" format="dimension" />
        <attr name="qxui_bottomDividerInsetRight" format="dimension" />
        <attr name="qxui_topDividerHeight" format="dimension" />
        <attr name="qxui_topDividerColor" format="color|reference" />
        <attr name="qxui_topDividerInsetLeft" format="dimension" />
        <attr name="qxui_topDividerInsetRight" format="dimension" />
        <attr name="qxui_leftDividerWidth" format="dimension" />
        <attr name="qxui_leftDividerColor" format="color|reference" />
        <attr name="qxui_leftDividerInsetTop" format="dimension" />
        <attr name="qxui_leftDividerInsetBottom" format="dimension" />
        <attr name="qxui_rightDividerWidth" format="dimension" />
        <attr name="qxui_rightDividerColor" format="color|reference" />
        <attr name="qxui_rightDividerInsetTop" format="dimension" />
        <attr name="qxui_rightDividerInsetBottom" format="dimension" />
        <attr name="qxui_radius" />
        <attr name="qxui_borderColor" />
        <attr name="qxui_borderWidth" />
        <attr name="qxui_outerNormalColor" format="color|reference" />
        <attr name="qxui_hideRadiusSide" format="enum">
            <enum name="none" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
            <enum name="left" value="4" />
        </attr>
        <attr name="qxui_showBorderOnlyBeforeL" format="boolean" />
        <attr name="qxui_shadowElevation" format="dimension" />
        <attr name="qxui_useThemeGeneralShadowElevation" format="boolean" />
        <attr name="qxui_shadowAlpha" format="float" />
        <attr name="qxui_outlineInsetTop" format="dimension" />
        <attr name="qxui_outlineInsetLeft" format="dimension" />
        <attr name="qxui_outlineInsetRight" format="dimension" />
        <attr name="qxui_outlineInsetBottom" format="dimension" />
        <attr name="qxui_outlineExcludePadding" format="boolean" />
    </declare-styleable>

    <declare-styleable name="QXUIPriorityLinearLayout_Layout">
        <attr name="qxui_layout_priority" format="enum">
            <enum name="disposable" value="1" />
            <enum name="mini_content_protection" value="2" />
            <enum name="incompressible" value="3" />
        </attr>
        <attr name="qxui_layout_miniContentProtectionSize" format="dimension" />
    </declare-styleable>

    <!--遮罩层-->
    <declare-styleable name="AlphaMaskLinearLayout">
        <attr name="alpha" format="float" />
        <attr name="animate" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RealtimeBlurView">
        <attr name="realtimeBlurRadius" format="dimension" />
        <attr name="realtimeDownsampleFactor" format="float" />
        <attr name="realtimeOverlayColor" format="color" />
    </declare-styleable>

    <declare-styleable name="DragPageGridView">
        <attr name="rows" format="integer" />
    </declare-styleable>

</resources>