<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_20">

    <TextView
        android:id="@+id/input_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingTop="@dimen/dp_8"
        android:textColor="@color/xui_config_color_title"
        android:textSize="@dimen/sp_14"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_gray_frame"
        android:padding="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        >

        <EditText
            android:id="@+id/input_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"

            android:textColor="@color/xui_config_color_title"
            android:textColorHint="@color/xui_config_color_999999"
            android:textCursorDrawable="@drawable/my_edit_view_cursor"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/input_et_clear"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-2dp"
            android:src="@drawable/ic_common_ic_shut_b_min"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/input_et_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:visibility="gone"
        android:background="@color/xui_color_eaeaea" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5">

        <TextView
            android:id="@+id/input_error_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:textColor="@color/xui_config_color_error"
            android:textSize="@dimen/sp_12"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/input_br_tips_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_8"
            android:textColor="@color/xui_config_color_error"
            android:textSize="@dimen/sp_13"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>
